{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "classic",
    "emitDecoratorMetadata": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/vue/types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include" : [ 
    "./**/*.ts"
  ],
  "exclude" : [
    "./node_modules",
    "./lib"
  ]
}
